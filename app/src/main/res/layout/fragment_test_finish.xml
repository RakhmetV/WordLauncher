<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.step.finish.testFinishFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/test_finish_cup_one"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="92dp"
            android:src="@drawable/ic_achivemenets_gold_24"
            app:layout_constraintEnd_toStartOf="@+id/test_finish_cup_two"
            app:layout_constraintTop_toBottomOf="@+id/test_finish_marvelous" />

        <ImageView
            android:id="@+id/test_finish_cup_two"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/ic_achivemenets_gold_24"
            app:layout_constraintEnd_toEndOf="@+id/test_finish_marvelous"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/test_finish_marvelous"
            app:layout_constraintTop_toBottomOf="@+id/test_finish_marvelous" />

        <ImageView
            android:id="@+id/test_finish_cup_three"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="92dp"
            android:src="@drawable/ic_achivemenets_gold_24"
            app:layout_constraintStart_toEndOf="@+id/test_finish_cup_two"
            app:layout_constraintTop_toBottomOf="@+id/test_finish_marvelous" />

        <TextView
            android:id="@+id/test_finish_marvelous"
            android:layout_width="96dp"
            android:layout_height="61dp"
            android:layout_marginTop="64dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/test_finish_exit"
            android:layout_width="54dp"
            android:layout_height="51dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_close_step_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/test_finish_btn_next"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginBottom="100dp"
            android:backgroundTint="@color/btn_color_read"
            android:text="Continue"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/test_finish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="92dp"
            android:text="My time: "
            android:textSize="16dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/test_finish_cup_two"
            app:layout_constraintHorizontal_bias="0.64"
            app:layout_constraintStart_toStartOf="@+id/test_finish_cup_two"
            app:layout_constraintTop_toBottomOf="@+id/test_finish_cup_two" />

        <TextView
            android:id="@+id/test_finish_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="My points: "
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/test_finish_time"
            app:layout_constraintStart_toStartOf="@+id/test_finish_time"
            app:layout_constraintTop_toBottomOf="@+id/test_finish_time" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>