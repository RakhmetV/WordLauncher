<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F5F5">


    <ImageView
        android:id="@+id/img_puzzle_1"
        style="@style/puzzle_img"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/img_puzzle_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puzzle_name"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/img_puzzle_2"
        style="@style/puzzle_img"
        app:layout_constraintEnd_toStartOf="@+id/img_puzzle_3"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toEndOf="@+id/img_puzzle_1"
        app:layout_constraintTop_toBottomOf="@+id/puzzle_name"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/img_puzzle_3"
        style="@style/puzzle_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_puzzle_2"
        app:layout_constraintTop_toTopOf="@+id/img_puzzle_2"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/img_puzzle_4"
        style="@style/puzzle_img"
        app:layout_constraintEnd_toStartOf="@+id/img_puzzle_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_puzzle_1"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/img_puzzle_5"
        style="@style/puzzle_img"
        app:layout_constraintEnd_toStartOf="@+id/img_puzzle_6"
        app:layout_constraintStart_toEndOf="@+id/img_puzzle_4"
        app:layout_constraintTop_toBottomOf="@+id/img_puzzle_2"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/img_puzzle_6"
        style="@style/puzzle_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_puzzle_5"
        app:layout_constraintTop_toBottomOf="@+id/img_puzzle_3"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/img_puzzle_7"
        style="@style/puzzle_img"
        app:layout_constraintEnd_toStartOf="@+id/img_puzzle_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_puzzle_4"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/img_puzzle_8"
        style="@style/puzzle_img"
        app:layout_constraintEnd_toStartOf="@+id/img_puzzle_9"
        app:layout_constraintStart_toEndOf="@+id/img_puzzle_7"
        app:layout_constraintTop_toBottomOf="@+id/img_puzzle_5"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/img_puzzle_9"
        style="@style/puzzle_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_puzzle_8"
        app:layout_constraintTop_toBottomOf="@+id/img_puzzle_6"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/puzzle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>